{
  "name": "@andrii_shpak/rtable",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Andrew Shpak",
  "main": "dist/index.js",
  "module": "dist/rtable.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "watch": "dts watch",
    "test": "dts test --passWithNoTests",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/rtable.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/rtable.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@tsconfig/create-react-app": "^1.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "dts-cli": "^1.4.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.8",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "git add",
      "pretty-quick â€” staged",
      "lint"
    ]
  },
  "dependencies": {
    "eslint-plugin-prettier": "^4.0.0"
  }
}
